/* pages/todolist/todolist.wxss */
.container{
  flex-direction: column;
  padding: 30rpx;
  font-family: "微软雅黑";
}
.addtodo{
  border:2rpx dashed #b2b2b2;
  border-radius: 10rpx;
  color:#b2b2b2;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: block;

}
.todolist{
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
 
}
.item{
  font-size: 14px;
	display: flex;
	justify-content: space-between;
	border-bottom:1px solid #ccc;
	width: 100%;
	overflow: hidden

}

.content {
	width: 100%;
	padding: 10px;
	line-height: 22px;
	margin-right:0;
	-webkit-transition: all 0.4s;
	transition: all 0.4s;
	-webkit-transform: translateX(90px);
	transform: translateX(90px);
	margin-left: -90px
}

.del {
	background-color: orangered;
	width: 90px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	color: #fff;
	-webkit-transform: translateX(90px);
	transform: translateX(90px);
	-webkit-transition: all 0.4s;
	transition: all 0.4s;
}


.item icon{
  height: 50rpx;
  line-height:50rpx;
}
.item text{
  padding-left:10rpx;
  line-height: 50rpx;
}

.item .isok{
  color:#ccc;
  text-decoration: line-through;
}

.touch-move-active .content,
.touch-move-active .del {
	-webkit-transform: translateX(0);
	transform: translateX(0);
}