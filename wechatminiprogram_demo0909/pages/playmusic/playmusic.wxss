/* pages/playmusic/playmusic.wxss */
.name{
  background: #efefef;
  width: 1.5em;
  height: 1.5em;
  float:left;
  line-height: 1.5em;
  font-size:1.5em;
  margin-right: 6rpx;
  border-radius:10rpx;
  margin-top:50rpx;
  cursor: pointer;

}
.content{
  border:1px solid  #aaa;
  margin-top:50rpx;
  padding:50rpx;
  flex-direction: row;

}
.btn{
  background: #efefef;
  width: 150rpx;
  height: 3em;
  line-height: 3em;
  font-size:1.5em;
  float:left;
  margin-right: 1%;
  margin-bottom:5rpx;
  text-align:center;
  border-radius:10rpx;
}
.tip{
  float:left;
  padding-top: 14rpx;
  height:1.5em;
  line-height: 1.5em;
  display: inline-block;
}
.footer{
  position:fixed;
  bottom:0;
}
.sos{
  float:right;
  display:inline-block;
  background: #b0b0b0;
  text-align:center;
  color:#fff;
  line-height: 1.5em;
  padding: 0 1rpx;
  height:1.5em;
  margin:0 10rpx 10rpx 5rpx;
}
.sos:hover{
  background: #f4a460;
}